{
	"name": "@leonzalion/create-project",
	"version": "1.0.50",
	"main": "create-project.js",
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/leonzalion/create-project.git"
	},
	"homepage": "https://github.com/leonzalion/create-project#readme",
	"bin": {
		"create-project": "./bin/create-project.js"
	},
	"prettier": "@leonzalion/configs/prettier",
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint"
		]
	},
	"scripts": {
		"prepare": "simple-git-hooks",
		"release": "lionp",
		"start": "node-ts ./src/bin/create-project.ts",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"build": "node-ts ./scripts/build.ts",
		"lint": "eslint --cache --fix .",
		"prettier": "prettier --write src",
		"tc": "tsc --noEmit"
	},
	"dependencies": {
		"change-case": "^4.1.2",
		"commander": "^9.0.0",
		"execa": "^6.1.0",
		"inquirer": "^8.2.0",
		"map-obj": "^5.0.0",
		"recursive-copy": "^2.0.14",
		"replace-in-file": "^6.3.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.1",
		"@leonzalion/configs": "^1.0.72",
		"@types/inquirer": "^8.2.0",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.21",
		"eslint": "^8.10.0",
		"eslint-define-config": "^1.2.5",
		"execa": "^6.0.0",
		"jest": "^27.5.1",
		"lint-staged": "^12.3.4",
		"lion-system": "^1.0.9",
		"lionp": "^1.0.19",
		"micromatch": "^4.0.4",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"simple-git-hooks": "^2.7.0",
		"ts-jest": "^27.1.3",
		"ts-jest-resolver": "^2.0.0",
		"tsc-alias": "^1.6.3",
		"tsm": "^2.2.1",
		"type-fest": "^2.12.0",
		"typescript": "^4.5.5"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec node-ts ./scripts/hooks/pre-commit.ts",
		"pre-push": "pnpm exec node-ts ./scripts/hooks/pre-push.ts",
		"commit-msg": "pnpm exec node-ts ./scripts/hooks/commit-msg.ts $@"
	},
	"publishConfig": {
		"directory": "dist"
	}
}
