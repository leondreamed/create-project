{
	"name": "@leonzalion/create-project",
	"version": "1.0.1",
	"main": "dist/create-project.js",
	"license": "MIT",
	"type": "module",
	"files": [
		"dist"
	],
	"bin": {
		"create-project": "dist/create-project.js"
	},
	"prettier": "@leonzalion/prettier-config",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"scripts": {
		"setup": "simple-git-hooks",
		"postinstall": "pnpm run setup",
		"start": "node --loader ts-node/esm ./src/create-project.ts",
		"test": "xo && NODE_OPTIONS=--experimental-vm-modules jest",
		"build": "rimraf dist && tsc && tsc-alias -p tsconfig.json",
		"prepublish": "pnpm build",
		"lint": "eslint --fix src",
		"prettier": "prettier --write src",
		"tc": "tsc --noEmit"
	},
	"dependencies": {
		"commander": "^8.3.0",
		"execa": "^6.0.0",
		"merge-trees": "^2.0.0",
		"replace-in-file": "^6.3.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@commitlint/config-conventional": "^15.0.0",
		"@leonzalion/eslint-config": "latest",
		"@leonzalion/markdownlint-config": "latest",
		"@leonzalion/prettier-config": "latest",
		"@leonzalion/tsconfig": "latest",
		"@types/jest": "^27.0.3",
		"@types/node": "^16.11.17",
		"eslint": "^8.5.0",
		"execa": "^6.0.0",
		"jest": "^27.4.5",
		"lint-staged": "^12.1.3",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"simple-git-hooks": "^2.7.0",
		"ts-jest": "^27.1.2",
		"ts-node": "^10.4.0",
		"tsc-alias": "^1.5.0",
		"typescript": "^4.5.4",
		"xo": "^0.47.0"
	},
	"simple-git-hooks": {
		"pre-commit": "node --loader ts-node/esm ./scripts/hooks/pre-commit.ts",
		"pre-push": "node --loader ts-node/esm ./scripts/hooks/pre-push.ts"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	}
}
