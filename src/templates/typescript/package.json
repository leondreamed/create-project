{
	"name": "typescript-template",
	"version": "1.0.0",
	"main": "dist/index.js",
	"type": "module",
	"license": "MIT",
	"prettier": "@leonzalion/configs/prettier",
	"commitlint": {
		"extends": [
			"@leonzalion/commitlint/config"
		]
	},
	"scripts": {
		"prepare": "simple-git-hooks",
		"start": "node --loader ts-node/esm ./src/index.ts",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"prepublish": "pnpm test && pnpm build",
		"lint": "eslint --cache --fix src",
		"prettier": "prettier --write src",
		"tc": "tsc --noEmit"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@leonzalion/configs": "latest",
		"@types/jest": "^27.0.3",
		"@types/node": "^17.0.0",
		"eslint": "^8.5.0",
		"execa": "^6.0.0",
		"jest": "^27.4.5",
		"lint-staged": "^12.1.3",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"simple-git-hooks": "^2.7.0",
		"ts-jest": "^27.1.2",
		"ts-node": "^10.4.0",
		"tsc-alias": "^1.5.0",
		"typescript": "^4.5.4"
	},
	"simple-git-hooks": {
		"pre-commit": "node --loader ts-node/esm ./scripts/hooks/pre-commit.ts",
		"pre-push": "if [[ $(git branch --show-current) == 'main' ]]; then node --loader ts-node/esm ./scripts/hooks/pre-push.ts; fi"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	}
}
