{
	"name": "electron-typescript-vite-template",
	"private": true,
	"engines": {
		"node": ">=v14"
	},
	"type": "module",
	"main": "packages/main/dist/index.cjs",
	"prettier": "@leonzalion/prettier-config",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"scripts": {
		"dev": "node --loader ts-node/esm scripts/watch.ts",
		"build": "node --loader ts-node/esm scripts/build.ts",
		"precompile": "cross-env MODE=production npm run build",
		"compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
		"pretest": "pnpm run build",
		"lint": "eslint --fix . --ext js,ts,vue",
		"prettier-main": "prettier --write packages/main",
		"prettier-preload": "prettier --write packages/preload",
		"prettier-renderer": "prettier --write packages/renderer",
		"prettier": "pnpm run prettier-main && pnpm run prettier-preload && pnpm run prettier-renderer",
		"tc-main": "tsc --noEmit -p packages/main/tsconfig.json",
		"tc-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
		"tc-renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
		"tc": "pnpm run tc-main && pnpm run tc-preload && pnpm run tc-renderer",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"ptc-renderer": "dts-cb -i packages/preload/src/**/*.ts -o packages/preload/exposedInMainWorld.d.ts"
	},
	"browserslist": [
		"Chrome 96"
	],
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged",
		"pre-push": "pnpm run tc"
	},
	"lint-staged": {
		"*.{js,ts,vue}": "eslint --cache --fix"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@commitlint/config-conventional": "^15.0.0",
		"@leonzalion/eslint-config": "^1.0.17",
		"@leonzalion/markdownlint-config": "^1.0.0",
		"@leonzalion/prettier-config": "^1.0.2",
		"@leonzalion/tsconfig": "^1.0.6",
		"@types/electron-devtools-installer": "^2.2.0",
		"@types/node": "^17.0.0",
		"@vitejs/plugin-vue": "^2.0.1",
		"cross-env": "^7.0.3",
		"dts-for-context-bridge": "^0.7.0",
		"electron": "^16.0.5",
		"electron-builder": "^22.14.5",
		"electron-devtools-installer": "^3.2.0",
		"eslint": "^8.5.0",
		"execa": "^6.0.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.1.3",
		"liontypes": "^1.0.2",
		"playwright": "^1.17.1",
		"prettier": "^2.5.1",
		"rollup": "^2.61.1",
		"simple-git-hooks": "^2.7.0",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4",
		"utility-types": "^3.10.0",
		"vite": "^2.7.3",
		"vue-tsc": "^0.29.8"
	},
	"dependencies": {
		"electron-updater": "^4.6.1",
		"puppeteer": "^13.0.0",
		"vue": "^3.2.26",
		"vue-router": "^4.0.12"
	}
}
